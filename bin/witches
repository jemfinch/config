#!/usr/bin/env python

import os
import sys

def main(argv):
  paths = os.environ['PATH'].split(':')
  found = {}
  for arg in argv:
    found[arg] = []
  seen = set()
  for path in paths:
    if path in seen:
      continue
    seen.add(path)
    for arg in argv:
      exe = os.path.join(path, arg)
      if os.path.exists(exe):
        found[arg].append(exe)
  for arg in argv:
    print '%s: %s' % (arg, ' '.join(found[arg]))

if __name__ == '__main__':
  main(sys.argv[1:])
